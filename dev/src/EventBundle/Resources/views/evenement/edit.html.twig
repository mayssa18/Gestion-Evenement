{% extends 'baseadmin.html.twig' %}

{% block container %}
<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-header">
                    <div class="row align-items-end">
                        <div class="col-lg-8">
                            <div class="page-header-title">

                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html"> <i class="feather icon-home"></i> </a>
                                    </li>
                                    <li class="breadcrumb-item"><a href="#!"></a>
                                    </li>
                                    <li class="breadcrumb-item"><a href="#!"></a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-block">

                                    <h1>Modifier l'évènement</h1>

                                    {{ form_start(edit_form, {'method': 'post', 'action': path('evenement_edit' , { 'id': evenement.id }) }) }}

                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            {{ form_row(edit_form.nom,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nom','required' :'1'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            {{ form_row(edit_form.type,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Sujet','required' :'1'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            {{ form_row(edit_form.nbrpart,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nombre participant','required' :'1'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            {{ form_row(edit_form.dateevent,{ 'attr': {'class': '','placeholder': 'Select your date','required' :'1','pattern':'^(0?\d|[12]\d|3[01])-(0?\d|1[012])-((?:19|20)\d{2})$'} }) }}
                                        </div>
                                    </div>
                                    <button type="submit" value="Edit" class="btn btn-grd-danger"/> Editer</button>
                                    {{ form_end(edit_form) }}

                                    <div>
                                        <ul>
                                            <li>

                                            </li>

                                        </ul>
                                    </div>
                                </div>
                                    {% endblock container %}
