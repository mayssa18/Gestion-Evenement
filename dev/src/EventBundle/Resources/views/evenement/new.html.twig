{% extends 'baseadmin.html.twig' %}

{% block container %}
<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-header">
                    <div class="row align-items-end">
                        <div class="col-lg-8">
                            <div class="page-header-title">
                                <div class="d-inline">

                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card">
                                <div class="card-header">

                                </div>
                                <div class="card-block">
                                    <h4 class="sub-title">Add event</h4>

                                        {{ form_start(form, {'method': 'post', 'action': path('evenement_new') }) }}
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.nom,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nom','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.type,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nom','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.nbrpart,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'NBr','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">

                                                {{ form_row(form.dateevent,{ 'attr': {'class': '','placeholder': 'Select your date','required' :'1','pattern':'^(0?\d|[12]\d|3[01])-(0?\d|1[012])-((?:19|20)\d{2})$'} }) }}
                                            </div>
                                        </div>
                                    <button type="submit" value="Create" class="btn btn-grd-danger"/> Add</button>


                                    {{ form_end(form) }}



                                </div>
                                    </div>
                                </div>



                    <div id="styleSelector">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock container %}



